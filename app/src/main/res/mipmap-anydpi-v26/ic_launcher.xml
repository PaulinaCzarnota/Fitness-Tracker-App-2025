<?xml version="1.0" encoding="utf-8"?>
<!--
    This layout is used on Android 8.0+ for launcher icons, enabling animation, masking, and dynamic shape rendering.

    - Background layer: green grid vector (static or subtle branding)
    - Foreground layer: white icon with shadow (core app symbol)
    - Monochrome layer: ensures compatibility with themed icons on Android 13+
-->
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Green grid background -->
    <background android:drawable="@drawable/ic_launcher_background" />

    <!-- White fitness vector foreground with shadow -->
    <foreground android:drawable="@drawable/ic_launcher_foreground" />

    <!-- Optional: Themed icon support for Android 13+ -->
    <monochrome android:drawable="@drawable/ic_launcher_foreground" />

</adaptive-icon>
