<?xml version="1.0" encoding="utf-8"?>
<!--
    This icon is used by devices/launchers that prefer round icons.
    The structure mirrors the standard adaptive icon to ensure consistent branding.

    Layers:
    - Background: Green grid vector graphic.
    - Foreground: White fitness icon with optional gradient shadow.
    - Monochrome: Used on Android 13+ when system uses themed icons.
-->
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Green grid background for round variant -->
    <background android:drawable="@drawable/ic_launcher_background" />

    <!-- White fitness vector foreground -->
    <foreground android:drawable="@drawable/ic_launcher_foreground" />

    <!-- Themed icon layer for Android 13+ -->
    <monochrome android:drawable="@drawable/ic_launcher_foreground" />

</adaptive-icon>
