<?xml version="1.0" encoding="utf-8"?>
<!--
    Fallback XML theme for Compose-based Fitness Tracker App.

    While UI theming is handled entirely via Jetpack Compose's Theme.kt,
    this XML theme must still be defined and referenced in AndroidManifest.xml.
-->
<resources>

    <!-- Base app theme for legacy compatibility -->
    <style name="Theme.FitnessTrackerApp" parent="android:Theme.Material.Light">

        <!-- Set default background color -->
        <item name="android:windowBackground">@color/color_white</item>

        <!-- Optional: colors for Views (in case any non-Compose components are used) -->
        <item name="android:textColorPrimary">@color/color_black</item>
        <item name="android:textColorSecondary">@color/color_hint</item>

        <!-- Hide ActionBar (Compose apps manage UI manually) -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Optional: enable edge-to-edge layout if needed -->
        <item name="android:windowTranslucentStatus">true</item>

    </style>

</resources>
