<?xml version="1.0" encoding="utf-8"?>
<!--
    Defines the backup rules for Auto Backup introduced in Android 6.0+.
    This file is respected only on devices running API 31+ (Android 12+).

    Docs: https://developer.android.com/guide/topics/data/autobackup
-->

<full-backup-content>

    <!-- INCLUDE shared preferences -->
    <include domain="sharedpref" path="." />
    <!-- INCLUDE local database (Room) -->
    <include domain="database" path="." />
    <!-- INCLUDE internal files stored in app-specific storage -->
    <include domain="file" path="." />
    <!-- INCLUDE cache (optional - usually not needed) -->
    <!-- <include domain="cache" path="." /> -->

    <!-- EXCLUDE specific files if needed -->
    <!-- <exclude domain="sharedpref" path="temp.xml" /> -->
    <!-- <exclude domain="file" path="debug.log" /> -->

</full-backup-content>
