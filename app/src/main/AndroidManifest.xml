<!--
    /**
     * Main manifest file for the Fitness Tracker App.
     *
     * Responsibilities:
     * - Declares permissions, application class, activities, services, and receivers.
     * - Ensures all required features and background tasks are registered.
     * - Follows consistent Javadoc-style comment structure.
     *
     * Core Features Supported:
     * - User authentication (Firebase, Internet)
     * - Workout logging (sensors, background service)
     * - Progress tracking (background tasks)
     * - Goal setting and notifications (alarms, notifications)
     * - Diet and nutrition tracking (local database)
     *
     * Coding Standards:
     * - Consistent header and inline comments.
     * - All components and permissions documented.
     * - Follows Google and project-specific style guidelines.
     */
-->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Removed package attribute as per Android Gradle Plugin requirements -->

    <!--
        /**
         * Permissions
         *
         * - ACTIVITY_RECOGNITION: For step counting and activity sensors.
         * - BODY_SENSORS: For accessing health-related sensors.
         * - INTERNET: For Firebase authentication and remote APIs.
         * - POST_NOTIFICATIONS: For sending notifications (Android 13+).
         * - RECEIVE_BOOT_COMPLETED: For re-registering alarms after device reboot.
         */
    -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".FitnessTrackerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessTrackerApp"
        tools:targetApi="33">

        <!--
            /**
             * MainActivity
             *
             * - Entry point for the app.
             * - Hosts the main Compose navigation and UI.
             */
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FitnessTrackerApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            /**
             * StepCounterService
             *
             * - Foreground service for live step tracking.
             * - Used for health/fitness sensor data collection.
             */
        -->
        <service
            android:name=".sensors.StepCounterService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="health" />

        <!--
            /**
             * WorkManager Initialization Provider
             *
             * - Disables default WorkManager initializer to use Hilt's.
             */
        -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.impl.WorkManagerInitializer"
                android:value="@string/workmanager_init_disable"
                tools:node="remove" />
        </provider>

        <!--
            /**
             * NotificationReceiver
             *
             * - Broadcast receiver for daily notifications.
             * - Handles alarm/notification triggers.
             */
        -->
        <receiver
            android:name=".notifications.NotificationReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />

        <!--
            /**
             * BootReceiver
             *
             * - Broadcast receiver to re-register alarms when device reboots.
             */
        -->
        <receiver
            android:name=".notifications.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
