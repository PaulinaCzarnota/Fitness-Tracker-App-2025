<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml for the Fitness Tracker App.
    Defines app permissions, activities, services, and broadcast receivers.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ================================= -->
    <!--            PERMISSIONS            -->
    <!-- ================================= -->

    <!-- Required for detecting steps (physical activity sensors) -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- Optional: For accessing body sensors (e.g., heart rate monitor) -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <!-- Required for any internet communication (e.g., APIs, cloud sync) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required from Android 13+ to show notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Allows rescheduling notifications after device restarts -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <!-- ================================= -->
    <!--           APPLICATION              -->
    <!-- ================================= -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessTrackerApp"
        tools:targetApi="31">

        <!-- ================================= -->
        <!--           MAIN ACTIVITY           -->
        <!-- ================================= -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FitnessTrackerApp">
            <intent-filter>
                <!-- Launcher entry point -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ================================= -->
        <!--       STEP COUNTER SERVICE        -->
        <!-- ================================= -->
        <service
            android:name=".sensors.StepCounterService"
            android:enabled="true"
            android:exported="false" />

        <!-- ================================= -->
        <!--     NOTIFICATION RECEIVERS        -->
        <!-- ================================= -->

        <!-- Triggered by AlarmManager for daily notifications -->
        <receiver
            android:name=".notifications.NotificationReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />

        <!-- Reschedules reminders on device reboot -->
        <receiver
            android:name=".notifications.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <!-- Broadcast when the device finishes booting -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
